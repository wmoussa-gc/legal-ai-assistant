# Environment variables template
# Copy this to .env and fill in your actual values

# Azure OpenAI Configuration (Required)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=your_azure_openai_endpoint_here
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name_here

# Database (future)
DATABASE_URL=sqlite:///./legal_ai.db

# s(CASP) and Prolog configuration
SCASP_PATH=/usr/local/bin/scasp
PROLOG_PATH=/usr/local/bin/swipl

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# Frontend Configuration
# For local development
REACT_APP_API_URL=http://localhost:8000
# For Codespaces (auto-configured by setup scripts)
# REACT_APP_API_URL=https://your-codespace-8000.app.github.dev

# Development Settings
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
NODE_ENV=development

# Logging
LOG_LEVEL=info